{
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "program->stm32",
            "command": "openocd",
            "args": [
                "-f",
                "interface/stlink.cfg",
                "-f",
                "target/stm32h7x.cfg",
                "-c",
                "program build/stboot.bin 0x8000000 verify reset exit"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Build"
        }
    ]
}